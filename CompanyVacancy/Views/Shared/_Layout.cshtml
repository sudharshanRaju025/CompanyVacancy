<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompanyVacancy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CompanyVacancy.styles.css" asp-append-version="true" />

</head>
<body style=" height: 100%;
      margin: 0;        
      padding: 0;
">
    <!-- Header -->
    <header style="background-repeat:no-repeat">
        <nav class="navbar navbar-expand-lg " style="background-color:#00A2E5">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-action="Search">
                    <img src="~/images/logo.jpg" alt="Logo" style="height: 60px;" class="me-3" />
                    <span class="text-black" style="font-size: 1.5rem;">CompanyVacancy</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @* <li class="nav-item">
                            <a class="nav-link text-purple"style="font-size:18px" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-black" style="font-size:18px" asp-area="" asp-controller="CompanyDetails" asp-action="Search">Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" style="font-size:18px" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Body -->
    <div class="container mt-4"
         style="  margin-bottom: 60px;

    background-image: url("../wwwroot/images/bacakgroundimage.jpg");
         background-repeat: no-repeat;
         background-size: 100%100%;
         opacity: 100%;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>

    <footer class="bg-dark text-light text-center py-3" style="background-color: #f1f1f1; padding: 0px; text-align: center;">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div>
                    &copy; @DateTime.Now.Year CompanyVacancy. All rights reserved.
                </div>
                <div>
                    <a class="text-dark text-decoration-none me-3" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    <a class="text-dark text-decoration-none" href="#">Terms</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</html>
